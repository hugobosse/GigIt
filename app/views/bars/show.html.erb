
<div class="banner_bar" style="background: linear-gradient(-225deg, rgba(0,101,168,0.6) 0%, rgba(0,36,61,0.6) 50%), url('http://www.sofizz.fr/blog/wp-content/uploads/2016/10/3.jpg');">
  <div class="container">
    <div class="bar_description">
      <h1 class="bar_title"><%= @bar[:name] %></h1>
      <div class="bar_address">
        <%= @bar[:address] %>
      </div>
    </div>
    <div class="bar_price">
      <%= @bar[:price] %>
      <i class="fa fa-eur" aria-hidden="true"></i>
    </div>
    <div class="bar_specificities">
      <div class="bar_genre">
        <%= @bar.genre %>
      </div>
      <div class="bar_rating">
        <%= @bar.artists.count %>
        <i class="fa fa-user" aria-hidden="true"> - </i>
        <% @all_ratings = [] %>
        <% @bookings.each do |booking| %>
          <% @all_ratings << booking[:bar_rating] %>
        <% end %>
        <% @bar_rating = @all_ratings.reduce(:+) / @all_ratings.length %>
        <% @bar_rating.times do %>
          <i class="fa fa-star" aria-hidden="true"></i>
        <% end %>
      </div>
    </div>
  </div>
</div>
<div class="googlemap_bar" style="background: url('https://i.stack.imgur.com/chfhv.png');">
  <div class="container">
  test
  </div>
</div>

<div class="container">
  <div class="bar_reviews">
    <ul>
      <% @bookings.each do |booking| %>
        <li class="bar_review">
            <h2> <%= booking.user.username %> </h2>
            <p> <% booking.bar_rating.times do %>
              <i class="fa fa-star" aria-hidden="true"></i>
            <% end %> </p> 
            <p class=review > <%= booking.bar_review %> </p> 
        </li>
      <% end %>
    </ul>
  </div>
</div>

