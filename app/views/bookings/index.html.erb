<div class="container">
  <div class="row">
    <% @bookings.each do |booking| %>
      <div class="booking">
        <div class="col-xs-12 col-lg-6">
          <div class="booking-half">
              <div class="booking-info text-center">
                <h2><%= booking.booking_date.strftime("Save the date : %d/%m/%Y") %></h2>
                <%= link_to "add a review", review_path(booking.id), {class: "neon-btn"} %>
              </div>
              <div class="booking-delete">
                <p>
                  <%= link_to booking_path(booking), { class: "links", method: :delete } do %>
                  <i class="fa fa-trash" aria-hidden="true"></i>
                <% end %>
                </p>
            </div>
          </div>
        </div>
        <div class="col-xs-12 col-lg-6" >
          <%= render '/shared/bar_card', bar: booking.bar %>
        </div>
      </div>
    <% end %>
  </div>
</div>


