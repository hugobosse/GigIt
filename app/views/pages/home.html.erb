<div class="container">
  <div class="col-sm-6 col-sm-offset-3">
  <%= simple_form_for :search, url: bars_path, method: "get" do |f|%>
      <%= f.input :booking_date, as: :date%>
      <%= f.input :address, placeholder: "Enter an address" %>
      <%= f.input :genre, collection: ["jazz", "rock", "pop", "blues", "hip hop", "metal", "country", "classique", "tout genre"] %>
      <%= f.submit "Get a Gig", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
