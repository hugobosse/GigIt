
<div class="wrapper">
  <div class="banner">
    <div class="banner-content">
      <div class="brand neon" >Gig It !</div>
      <p>and lead your band to fame and glory</p>
      <div class="search-bar">
        <%= render 'home_search_bar' %>
      </div>
    </div>
  </div>
</div>

<div class="container-index">
  <h2> - - Last booked bars - - </h2>
  <div class="row">
    <% @last_booked_bars.each do |b| %>
      <div class="col-xs-12 col-sm-6">
        <%= render 'shared/bar_card', bar: b %>
      </div>
    <% end %>
  </div>
</div>



